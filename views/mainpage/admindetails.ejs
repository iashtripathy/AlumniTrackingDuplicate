        <a href="/admin/logout"><button class="btn btn-success" style="background:#94c045;border-color:none;">Logout</button></a>
      </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
      <div class="container">
          <% if(user_type['admin']){ %>
            <div class="col-lg-8 mt-5 mt-lg-0" data-aos="fade-left" style="width:80vw !important;">
              <h4>Send Notification to Alumni</h4>  
              <form action="/admin/sendmail" method="post">
                <div class="form-group mt-3">
                  <input type="text" class="form-control" name="subject" id="subject" placeholder="Subject" required>
                </div>
                <div class="form-group mt-3">
                  <textarea class="form-control" name="message" rows="5" placeholder="Message" required></textarea>
                </div>
                <div class="my-3">
                  <div class="error-message"></div>
                  <div class="sent-message" id="sent-message" style="display:none;">Your message has been sent. Thank you!</div>
                </div>

                <div class="text-center"><button type="submit" class="btn btn-success" style="background:#94c045;border-color:none;">Send Message</button></div>
              </form>
            </div>
          <% } %>

          <div class="col-md-12" style="width:fit-content;margin-top:15px;">
            <div class="page-people-directory">
                <div class="row">
                   
                    <div class="col-md-9" style="width:80vw !important;margin:20px 5px !important;">

                        <div class="row">
                            <div class="col-md-6">
                                <h3 style="font-family:none;">Search Alumni</h3>
                            </div>
                           
                        </div>


                        <div class="well">
                            <div class="row">
                                <input class="form-control" id="myInput" type="text" placeholder="Search..">
                                
                            </div>
                        </div>
                        <br>

                        
                        <div class="list-group contact-group" id="myTable">
                            <% for(var i = 0; i< records.length; i++ ) {%>
                            <a href="#" class="list-group-item">
                                <div class="media">
                                    <div class="pull-left">
                                        <img id="makeround" class="img-circle" src="<%=records[i].alumniImage.url %>" alt="...">
                                    </div>
                                    <div class="media-body">
                                        <h4 class="media-heading"  style="margin-left:100px;">
                                            <%=records[i].alumniName%> 
                                            <small>Software Engineer at Facebook, Inc.</small>
                                            <form class="deleteform" action="/admin/deleteuser/<%=records[i]._id%>?_method=DELETE" method="post">
                                                <i class="fa fa-trash deleteuser" style="float:right;"></i>
                                            </form>
                                        </h4>
                                        <div style="margin-left:100px !important; " class="media-content">
                                            <i class="fa fa-map-marker"></i> San Francisco, California, United States
                                            
                                            
                                            <ul class="list-unstyled">
                                                <li><i class="fa fa-skype"></i> <%=records[i].alumniRollNo%></li>
                                                <li><i class="fa fa-mobile"></i> 8790456720</li>
                                                <li><i class="fa fa-envelope-o"></i> <%=records[i].alumniEmail%></li>
                                                
                                            </ul>
                                        </div>
                                        
                                    </div>
                                </div>
                            </a>   
                            <%}%> 
                        </div>
                    </div>
                </div> 
            </div>
         </div>



        </div>

      </div>
    </section><!-- End Contact Section -->

