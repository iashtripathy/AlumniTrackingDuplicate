<body>

  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top d-flex align-items-center">
    <div class="container d-flex align-items-center justify-content-between">

      <div class="logo">
        <!-- <h1 class="text-light"></h1> -->
        <a class ="image" href="/index"><img class ="image" src="../../public/uploads/logo.jpeg"></a>
        <!-- Uncomment below if you prefer to use an image logo -->
        <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
      </div>

      <nav id="navbar" class="navbar">
        <ul>
          <li><a href="/index">Home</a></li>
          <li class="dropdown"><a href="#"><span>About</span> <i class="bi bi-chevron-down"></i></a>
            <ul>
              <li><a href="/images">Images</a></li>
              <li><a href="/team">Team</a></li>
            </ul>
          </li>
          
          <li><a href="/events">Programs and Events</a></li>
          <li><a href="/services">Career Opportunities</a></li>
          <li><a href="/stories">Alumni Stories</a></li>
          <li><a href="/contact">Contact</a></li>

          <!-- Modal content --> 
          <%- include('./modalLogin/modal') %>

          <% if(!user_type['admin'] && !user_type['alumni']){ %>
            <li><button class="getstarted" onclick="callMe()">Login</button></li>
          <% } else if(user_type['alumni']){ %>  
            
            <li><a class="getstarted" href="/alumni/currentAlumniDetails">My Proile</a></li>
          <% } else if(user_type['admin']){ %>
            <li><a class="getstarted" href="/admin/details">Admin Proile</a></li>
          <% } %>
          
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav><!-- .navbar -->

    </div>
  </header><!-- End Header -->

  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="breadcrumb-hero">
        <div class="container">
          <div class="breadcrumb-hero">
            <h2>Admin Profile</h2>
          </div>
        </div>
      </div>
      <div class="container">
        <ol>
          <li><a href="/index">Home</a></li>
          <li>Admin Profile</li>
        </ol>
      </div>
      <div class="container" style="float:right;width:100px !important;margin-right:5vw;">
        <a href="/admin/logout"><button class="btn btn-success" style="background:#94c045;border-color:none;">Logout</button></a>
      </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        
      <div class="container">
          <% if(user_type['admin']){ %>
            <div class="col-lg-8 mt-5 mt-lg-0" data-aos="fade-left" style="width:80vw !important;">
              <h4>Send Notification to Alumni</h4>  
              <form action="/admin/sendmail" method="post">
                <div class="form-group mt-3">
                  <input type="text" class="form-control" name="subject" id="subject" placeholder="Subject" required>
                </div>
                <div class="form-group mt-3">
                  <textarea class="form-control" name="message" rows="5" placeholder="Message" required></textarea>
                </div>
                <div class="my-3">
                  <div class="error-message"></div>
                  <div class="sent-message" id="sent-message" style="display:none;">Your message has been sent. Thank you!</div>
                </div>

                <div class="text-center"><button type="submit" class="btn btn-success" style="background:#94c045;border-color:none;">Send Message</button></div>
              </form>
            </div>
          <% } %>


      </div>
    </section><!-- End Contact Section -->

  </main><!-- End #main -->

  <!--FOOTER SECTION-->
  <%- include('./footer.ejs') %>
