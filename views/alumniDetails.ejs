<html>
    <head>
        <title>details</title>
        <link rel="stylesheet"  type="text/css" href="../public/styles/alumniDetails.css">
    </head>
    <body>
        <div class="alumni">
            <h1>ALUMNI DETAILS</h1>
            <form action="/register/fillDetails" method="post">
            <table>
            <tr><td><h4>Personal Details:</h4></td></tr>
                <tr>
                    <td>Alumni Name</td>
                    <td><input type="text" name="alumniName" ></td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td><input type="text" name="email"></td>
                </tr>
                <tr>
                    <td>DOB</td>
                    <td><input type="text" name="dob"></td>
                </tr>
                <tr>
                    <td>Current Address</td>
                    <td><textarea rows="2" cols="33" name="currentAddress"></textarea></td>
                </tr>
                <tr>
                        <td>Permanent Address</td>
                        <td><textarea rows="2" cols="33" name="permanentAddress"></textarea></td>
                    </tr>
        
                <tr>
                    <td>Interests</td>
                    <td><input type="checkbox" name="interests">Hackathons</input><br>
                        <input type="checkbox" name="interests">webinars</input><br>
                        <input type="checkbox" name="interests" >other</input><br></td>
                </tr>
                <tr><td><h4>College Details:</h4></td></tr>
                <tr>
                    <td>Branch</td>
                    <td><input type="text" name="branch"></td>
                </tr>
                <tr>
                    <td>Passed Out Year</td>
                    <td><input type="text" name="passedOutYear"></td>
                </tr>
                <tr>
                    <td><h4>Company Details:</h4></td>
                </tr>
                <tr>
                    <td>Current Working</td>
                    <td><input type="text" name="currentWorking"></td>
                </tr>
                <tr>
                    <td>Designation</td>
                    <td><input type="text" name="designation"></td>
                </tr>

                <tr>
                    <td></td>
                    <td ><input type="submit" name="submit" value="SUBMIT"></td>
                </tr>
            </table>
            </form>
            
        </div>
    </body>

</html>